{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"noEmit": true,
		"lib": ["ESNext"],
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"composite": true
	},
	"include": ["src", "test", "test/**/*.json"]
}
