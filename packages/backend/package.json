{
  "name": "@disco/backend",
  "version": "1.0.0",
  "type": "module",
  "private": "true",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbuild": "cd dist && zip -r index.zip index.js*",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "graphql": "^16.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
